# =========================
# Production Environment Configuration
# =========================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# =========================
# Database Configuration
# =========================
DATABASE_PATH=./data/riderpro.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=12
DB_MAX_BACKUPS=14
DB_VACUUM_INTERVAL=168
DB_WAL_MODE=true
DB_JOURNAL_MODE=WAL
DB_SYNCHRONOUS=NORMAL
DB_CACHE_SIZE=20000
DB_TEMP_STORE=MEMORY

# =========================
# Security Configuration - CHANGE THESE VALUES!
# =========================
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRES_IN=8h
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=50
SESSION_TIMEOUT=8
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=30
AUDIT_LOG_RETENTION=365
ENABLE_CORS=false
CORS_ORIGINS=https://yourdomain.com

# =========================
# Route Tracking Configuration
# =========================
ROUTE_TRACKING_ENABLED=true
ROUTE_TRACKING_INTERVAL=30
MAX_COORDINATES_PER_SESSION=50000
DATA_RETENTION_DAYS=365
DEFAULT_FUEL_EFFICIENCY=15.0
DEFAULT_FUEL_PRICE=1.5
BATTERY_OPTIMIZATION=true
OFFLINE_SYNC=true
REAL_TIME_UPDATES=true
ANALYTICS_ENABLED=true
EXPORT_ENABLED=true
AUDIT_LOGGING=true
PRIVACY_MODE=true

# =========================
# Feature Flags - Production Settings
# =========================
FEATURE_ROUTE_TRACKING=true
FEATURE_LIVE_TRACKING=true
FEATURE_ROUTE_ANALYTICS=true
FEATURE_ROUTE_VISUALIZATION=true
FEATURE_ROUTE_OPTIMIZATION=true
FEATURE_MOBILE_OPTIMIZATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_DATA_EXPORT=true
FEATURE_AUDIT_LOGS=true
FEATURE_PRIVACY_CONTROLS=true
FEATURE_DB_OPTIMIZATION=true
FEATURE_PERFORMANCE_MONITORING=true

# =========================
# Monitoring Configuration
# =========================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_METRICS=true
ERROR_TRACKING=true

# =========================
# Alerting Configuration
# =========================
ALERTING_ENABLED=true
EMAIL_ALERTS_ENABLED=true
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=alerts@yourdomain.com
SMTP_PASS=your_email_password
ALERT_EMAIL_RECIPIENTS=admin@yourdomain.com,ops@yourdomain.com

WEBHOOK_ALERTS_ENABLED=false
WEBHOOK_URL=https://your-monitoring-service.com/webhook
WEBHOOK_SECRET=your_webhook_secret

SLACK_ALERTS_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#production-alerts

# =========================
# Monitoring Thresholds - Production Values
# =========================
ERROR_RATE_THRESHOLD=2.0
RESPONSE_TIME_THRESHOLD=500
MEMORY_USAGE_THRESHOLD=75.0
DISK_USAGE_THRESHOLD=80.0
DATABASE_SIZE_THRESHOLD=5000

# =========================
# File Upload Configuration
# =========================
MAX_FILE_SIZE=5
ALLOWED_FILE_TYPES=image/jpeg,image/png
UPLOAD_DIR=./uploads

# =========================
# Production Security
# =========================
DEBUG=false
VERBOSE_LOGGING=false
